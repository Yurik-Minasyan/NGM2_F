<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/download2"
    tools:context=".MainMenu">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
                <SearchView
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="1dp" />

                <ListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    app:layout_constraintTop_toBottomOf="@+id/search"
                    tools:layout_editor_absoluteX="1dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent">


                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:onClick="snack"
                    android:shadowColor="#000000"
                    android:shadowDx="10"
                    android:shadowDy="15"
                    android:shadowRadius="6"
                    android:text="Նախուտեստներ/Snacks/Закуски"
                    android:textColor="#78D2FA"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />

                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="10dp"
                    android:onClick="salad"
                    android:shadowColor="#000000"
                    android:shadowDx="10"
                    android:shadowDy="15"
                    android:shadowRadius="6"
                    android:text="Աղցան/Salad/Салат"
                    android:textColor="#78D2FA"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />

                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:onClick="junk_food"
                    android:shadowColor="#000000"
                    android:shadowDx="10"
                    android:shadowDy="15"
                    android:shadowRadius="6"
                    android:text="Արագ Սնունդ/Fast food/Быстрое питание"
                    android:textColor="#78D2FA"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />

                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="-5dp"
                    android:onClick="drink"
                    android:shadowColor="#000000"
                    android:shadowDx="10"
                    android:shadowDy="15"
                    android:shadowRadius="6"
                    android:text="Խմիչքներ/Drinks/Напитки"
                    android:textColor="#78D2FA"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />

                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="67dp"
                    android:layout_marginTop="5dp"
                    android:shadowColor="#000000"
                    android:shadowDx="10"
                    android:shadowDy="15"
                    android:onClick="coffee"
                    android:shadowRadius="6"
                    android:text="Սուրճ/Coffee/Кофе"
                    android:textColor="#78D2FA"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />

                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="25dp"
                    android:shadowColor="#000000"
                    android:shadowDx="10"
                    android:shadowDy="15"
                    android:shadowRadius="6"
                    android:onClick="cake"
                    android:text="Թխվածքներ/Cake/Торт"
                    android:textColor="#78D2FA"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />
        </LinearLayout>
</LinearLayout>